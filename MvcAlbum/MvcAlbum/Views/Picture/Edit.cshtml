@model MvcAlbum.Models.Picture

@{
    ViewBag.Title = "Edit";
}

<h2>Photo編集</h2>
<p style="text-align:right">
    <a href="../../Album/Details/@Model.AlbumID">一覧</a>
</p>
<hr />

@using (Html.BeginForm("Edit", "Picture", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Picture</legend>

        @Html.HiddenFor(model => model.PictureID)

        <div class="editor-label">
            @Html.LabelFor(model => model.Title)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Title)
            @Html.ValidationMessageFor(model => model.Title)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Path)
        </div>
        <div class="editor-field">
            <img src="~/Images/album/@Model.AlbumID/@Model.Path" width="120" height="120" style="border:1px solid black"/>
            <input type="file" name="Path"/>
        </div>

        <div class="editor-field">
            @Html.HiddenFor(model => model.AlbumID)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
