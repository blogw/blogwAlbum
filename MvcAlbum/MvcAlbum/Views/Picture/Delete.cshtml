@model MvcAlbum.Models.Picture

@{
    ViewBag.Title = "Delete";
}

<h2>Photo削除</h2>
<p style="text-align:right">
    <a href="../../Album/Details/@Model.AlbumID">一覧</a>
</p>
<hr />

<h3>Are you sure you want to delete this?</h3>
<fieldset>
    <legend>Picture</legend>

    <div class="display-label">
         @Html.DisplayNameFor(model => model.Title)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Title)
    </div>

    <div class="display-label">
         @Html.DisplayNameFor(model => model.Path)
    </div>
    <div class="display-field">
        <img src="~/Images/album/@Model.AlbumID/@Model.Path" width="120" height="120" style="border:1px solid black"/>
    </div>

    <div class="display-label">
         @Html.DisplayNameFor(model => model.AlbumID)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.AlbumID)
    </div>
</fieldset>
@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    <p>
        <input type="submit" value="Delete" />
    </p>
}
